<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/madera3"
    android:orientation="vertical"
    tools:context=".ActivityJuego">

    <fragment
        android:id="@+id/fragmentoJuego"
        android:name="com.example.mastermindconfragments.Fragment_Solucion"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragmentOpciones"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_fragment__solucion" />

    <fragment
        android:id="@+id/fragmentOpciones"
        android:name="com.example.mastermindconfragments.Fragment_Opciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="336dp"
        android:layout_marginLeft="336dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/fragmentoJuego"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout="@layout/fragment_fragment__opciones" />
</android.support.constraint.ConstraintLayout>